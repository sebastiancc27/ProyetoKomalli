<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_marginStart="12dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:id="@+id/item_platillo"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgv_platillo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/icono_platillo_default"
            />

        <TextView
            android:id="@+id/nombre_platillo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="@string/tv_nombre_platillo_rv"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/precio_platillo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="@string/tv_precio_platillo_rv"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>