<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarSesionActivity"
    android:orientation="vertical"
    android:background="@color/primary_blue"
    >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inicio_sesion_activity_titulo"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:id="@+id/contenedor_formulario"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="580sp"
        android:background="@drawable/img_komalli_background_blur"
        >
        <ImageView
            android:id="@+id/logo_splas_screen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/img_logo_komalli"
            android:layout_gravity="center"
            />
        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/et_correo"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="@string/et_correo_inicio_sesion"
            android:background="@drawable/shape_et_registro"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:maxLength="30"
            />
        <EditText
            android:id="@+id/et_contrasena"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="@string/et_contrasena_inicio_sesion"
            android:inputType="textPassword"
            android:background="@drawable/shape_et_registro"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:maxLength="10"
            />
        <Button

            android:layout_marginTop="30dp"
            android:id="@+id/btn_iniciar_sesion"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/btn_iniciar_sesion_activity"
            android:background="@drawable/shape_btn_verde"
            android:textColor="@color/white"
            android:shadowColor="@color/white"
            android:textSize="20sp"
            android:shadowDx="1"
            android:shadowDy="7"
            android:shadowRadius="10"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ImageButton
        android:layout_marginTop="10dp"
        android:id="@+id/home_btn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/icono_home"
        android:background="@drawable/shape_btn_verde"
        android:layout_gravity="center"
        />

</LinearLayout>